{{> _chrome }}

<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Application update · {{organisation_name}}</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
</head>
<body style="margin:0;padding:0;background:#f2f6ff;">
<table width="100%" role="presentation"><tr>
  <td style="background:linear-gradient(90deg,#e9e0ff 0%,#cfe0ff 100%);
             height:6px;font-size:0;">&nbsp;</td>
</tr></table>
<table width="100%" role="presentation"><tr><td style="height:32px;">&nbsp;</td></tr></table>

  <table width="100%" role="presentation"><tr><td align="center">
    <table class="wrapper rounded shadow" width="600" cellpadding="0" cellspacing="0" border="0"
           style="width:600px;max-width:600px;background:#ffffff;padding:48px;">
      <tr><td align="center" style="padding-bottom:32px;"><img src="https://cdn.chaosapp.com/logo-key.png" width="56" alt="CHAOS logo" style="display:block;border:0;outline:none;text-decoration:none;"></td></tr>
      <tr><td class="font text" style="mso-line-height-rule:exactly;">
        <h1 class="h1">Thank you for applying, {{name}}</h1>
        <p style="margin:0 0 16px;">We appreciate the time you invested in <strong>{{campaign_name}}</strong> at <strong>{{organisation_name}}</strong>.</p>
        <p style="margin:0 0 16px;">We’re moving forward with other candidates this round, but we were impressed and hope you’ll apply again next time.</p>
        <p style="margin:0;">All the best,<br>— {{organisation_name}} recruitment team</p>
      </td></tr>
    </table>
  </td></tr></table>
  <table width="100%" role="presentation"><tr><td style="height:48px;">&nbsp;</td></tr></table>
</body>
</html>
